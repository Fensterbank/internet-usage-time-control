<%= form_tag session_create_path do %>
    <div class="form-group">
      <%= label_tag :name %>
      <%= text_field_tag :name, params[:name], :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, params[:password_digest], :class => 'form-control' %>
    </div>
    <%= submit_tag "Einloggen", :class => 'btn btn-primary' %>
<% end %>